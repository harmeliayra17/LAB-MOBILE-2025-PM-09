        app:cardElevation="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activitySection">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iconSAffiliate"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/affiliate"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/titleSAffiliate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/iconSAffiliate"
                android:text="Shopee Affiliate Program"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card 2: Favorite -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardFavorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardSAffiliate">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iconFavorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/favorit" />

            <TextView
                android:id="@+id/titleFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/iconFavorite"
                android:layout_marginTop="5dp"
                android:text="Favorite"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card 3: Live dan Video -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLivenVid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardFavorite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iconLivenVid"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/livenvid"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/titleLivenVid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live dan Video"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/iconLivenVid"
                android:layout_marginStart="8dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card 4: ShopeePlus -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSplus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardFavorite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iconSplus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/shopeeplus"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/titleSplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopee Plus"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/iconSplus"
                android:layout_marginStart="8dp"/>
