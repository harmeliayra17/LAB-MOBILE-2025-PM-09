<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Header Profil -->
    <LinearLayout
        android:id="@+id/profileSection"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:orientation="vertical"
        android:background="@drawable/header_bg"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- Ikon Settings -->
            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:src="@drawable/settings" />

            <!-- Ikon Keranjang -->
            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/carts" />

            <!-- Ikon Chat -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chats" />
        </LinearLayout>

        <!-- Profile Layout -->
        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Foto Profil -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

            <!-- Nama & Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <!-- Nama + Classic -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="harmeliayra179"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/classicBadge"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/classic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/userStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 Pengikut    1 Mengikuti"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Seller Button -->
    <ImageView
        android:id="@+id/outsideImage"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/seller"
        android:layout_marginEnd="270dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profileSection"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/profileSection"
        tools:layout_editor_absoluteX="16dp">

        <!-- "Pesanan Saya" -->
        <TextView
            android:id="@+id/pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_regular"
            android:text="Pesanan Saya"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Lihat Riwayat Pesanan -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lihatRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Riwayat Pesanan"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/nextIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/more_gray" />
        </LinearLayout>
    </LinearLayout>

    <!-- Order Section -->
    <LinearLayout
        android:id="@+id/orderSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileSection">

        <ImageView
            android:id="@+id/orderPending"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/unpaid" />

        <ImageView
            android:id="@+id/orderPacked"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/packed" />

        <ImageView
            android:id="@+id/orderShipped"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/shipped" />

        <ImageView
            android:id="@+id/orderDelivered"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/rating" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/descorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderSection">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Dibayar"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dikemas"
            android:layout_marginStart="22dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dikirim"
            android:layout_marginStart="44dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beri Penilaian"
            android:layout_marginStart="32dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- hr -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="16dp"
        app:layout_goneMarginEnd="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray_hr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descorder" />

    <!-- Menu Section -->
    <LinearLayout
        android:id="@+id/menuSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/descorder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Pulsa, Tagihan & Tiket -->
        <LinearLayout
            android:id="@+id/pnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/creditnbills" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Pulsa, Tagihan dan Tiket"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/more_gray" />
        </LinearLayout>

        <!-- hr -->
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray_hr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pnt" />

        <!-- ShopeeFood -->
        <LinearLayout
            android:id="@+id/shopeesec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/shopeefood" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="ShopeeFood"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/more_gray"
               />
        </LinearLayout>

    </LinearLayout>

    <!-- hr -->
    <View
        android:id="@+id/hr_topWallet"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_hr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/walletSection" />

    <!-- Wallet Section -->
    <LinearLayout
        android:id="@+id/walletSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuSection">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_regular"
            android:text="Dompet Saya"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- ShopeePay -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/shopeepay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ShopeePay"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp476"
                    android:textColor="@color/orange"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Koin Shopee -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/scoin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Koin Shopee"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gratis 25RB!"
                    android:textColor="@color/orange"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Voucher Saya -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/voucher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voucher Saya"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50+ Voucher"
                    android:textColor="@color/orange"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Instal ShopeePay -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/spay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instal ShopeePay"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Klaim 50.000"
                    android:textColor="@color/orange"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- hr -->
    <View
        android:id="@+id/hr_wallet"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginVertical="0dp"
        android:layout_marginTop="3dp"
        android:background="@color/gray_hr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/walletSection" />

    <!-- hr -->
    <View
        android:id="@+id/hr_wallet4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_hr"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardAsuransi" />

    <!-- Finance Section -->
    <LinearLayout
        android:id="@+id/keuanganSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/hr_wallet"
        tools:layout_editor_absoluteX="16dp">

        <!-- "Keuangan" -->
        <TextView
            android:id="@+id/keuangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_regular"
            android:text="Keuangan"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Lihat Semua -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/lihatSemua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Semua"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/nextIcon2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/more_gray" />
        </LinearLayout>
    </LinearLayout>

    <!-- Card 1: SPayLater -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSPayLater"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_marginTop="0dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/keuanganSection">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iconSPayLater"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/spaylater"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/titleSPayLater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPayLater"
                android:textSize="14sp"
                android:layout_toEndOf="@id/iconSPayLater"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/subtitleSPayLater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diskon s/d 40RB"
                android:textSize="8sp"
                android:textColor="@color/orange"
                android:layout_below="@id/titleSPayLater"
                android:layout_toEndOf="@id/iconSPayLater"
                android:layout_marginStart="8dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Kartu 2: SPinjam -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSPinjam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardSPayLater">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iconSPinjam"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/spinjam" />

            <TextView
                android:id="@+id/titleSPinjam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/iconSPinjam"
                android:text="SPinjam"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/subtitleSPinjam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleSPinjam"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/iconSPinjam"
                android:text="Hingga 50JT"
                android:textColor="@color/orange"
                android:textSize="8sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card 3: SeaBank -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSeaBank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardSPayLater">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iconSeaBank"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/seabank"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/titleSeaBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SeaBank"
                android:textSize="14sp"
                android:layout_toEndOf="@id/iconSeaBank"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/subtitleSeaBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleSeaBank"
                android:layout_marginStart="8dp"

                android:layout_marginTop="0dp"
                android:layout_toEndOf="@id/iconSeaBank"
                android:text="Gratis Transfer Antar Bank"
                android:textColor="@color/orange"
                android:textSize="8sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card 4: Asuransi -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAsuransi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardSPinjam">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iconAsuransi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/asuransi"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/titleAsuransi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asuransi"
                android:textSize="14sp"
                android:layout_toEndOf="@id/iconAsuransi"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/subtitleAsuransi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dapatkan pertanggungan Rp1JT bebas biaya"
                android:textSize="8sp"
                android:textColor="@color/orange"
                android:layout_below="@id/titleAsuransi"
                android:layout_toEndOf="@id/iconAsuransi"
                android:layout_marginStart="8dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Activity Section -->
    <LinearLayout
        android:id="@+id/activitySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/hr_wallet4"
        tools:layout_editor_absoluteX="16dp">

        <!-- "Aktivitas" -->
        <TextView
            android:id="@+id/activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_regular"
            android:text="Aktivitas"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

