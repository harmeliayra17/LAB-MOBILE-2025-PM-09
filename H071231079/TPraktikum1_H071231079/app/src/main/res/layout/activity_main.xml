                android:src="@drawable/me"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saya"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textColor="#FF5722"/>
