<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/btnBackNama"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:contentDescription="Back Icon"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tvUbahNama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ubah Nama"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/btnSimpanNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="simpan"
            android:textColor="#AEACAC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <!-- hr -->
    <View
        android:id="@+id/hr_6"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/topbar"
        />

    <LinearLayout
        android:id="@+id/layoutInputBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/hr_6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etInputBio"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="Masukkan bio kamu..."
                android:padding="16dp"
                android:background="@color/white"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:maxLength="500"
                android:scrollbars="vertical"
                android:overScrollMode="always"
                android:maxLines="5" />

            <ImageView
                android:id="@+id/btnClearBio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:src="@drawable/cancel"
                android:contentDescription="Clear Bio" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tvNoteBioKarakter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maks. 500 karakter"
            android:textSize="12sp"
            android:paddingLeft="16dp"
            android:layout_marginTop="4dp"
            android:textColor="#AEACAC"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
