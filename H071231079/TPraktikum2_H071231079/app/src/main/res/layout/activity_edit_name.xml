<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/btnBackNama"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:contentDescription="Back Icon"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tvUbahNama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ubah Nama"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/btnSimpanNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="simpan"
            android:textColor="#AEACAC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <!-- hr -->
    <View
        android:id="@+id/hr_6"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/topbar"
        />

    <LinearLayout
        android:id="@+id/layoutInputNewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/hr_6">

        <!-- EditText + Cancel Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <EditText
                android:id="@+id/etInputNewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan sesuatu..."
                android:paddingEnd="48dp"
                android:padding="16dp"
                android:maxLength="100"
                android:background="@color/white"
                android:inputType="text" />

            <ImageView
                android:id="@+id/btnClearName"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/cancel"
                android:contentDescription="Clear Text"
                android:visibility="visible" />
        </RelativeLayout>

        <!-- Note -->
        <TextView
            android:id="@+id/tvNoteKarakter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maks. 100 karakter"
            android:textSize="12sp"
            android:layout_marginStart="16dp"
            android:textColor="#AEACAC"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
