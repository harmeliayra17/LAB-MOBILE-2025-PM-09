<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:contentDescription="Back Icon"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tvUbahProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ubah Profile"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/saveIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/check_gray"
            android:contentDescription="Simpan"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <!-- hr -->
    <View
        android:id="@+id/hr_6"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/topbar"
        />

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="#FF5722"
        app:layout_constraintTop_toBottomOf="@id/hr_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@drawable/profile_circle"
            android:clickable="true"
            android:clipToOutline="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/tvUbahFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="Ubah"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <!-- Layout Vertikal untuk semua field -->
    <LinearLayout
        android:id="@+id/field1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <!-- Username -->
        <LinearLayout
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="harmeliayra"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/more_gray"/>
            </LinearLayout>
        </LinearLayout>
        <!-- hr -->
        <View
            android:id="@+id/hr_7"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray_bg"
            app:layout_constraintTop_toBottomOf="@id/name"
            />

        <!-- Nama -->
        <LinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Nama"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lia"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/more_gray"/>
            </LinearLayout>
        </LinearLayout>
        <!-- hr -->
        <View
            android:id="@+id/hr_3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray_bg"
            app:layout_constraintTop_toBottomOf="@id/name"
            />

        <!-- Bio -->
        <LinearLayout
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Bio"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="adalah ibu kucing"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/more_gray"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- hr -->
    <View
        android:id="@+id/hr_1"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/gray_bg"
        app:layout_constraintTop_toBottomOf="@id/field1"
        />

    <LinearLayout
        android:id="@+id/field2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/hr_1">

        <!-- Jenis Kelamin -->
        <LinearLayout
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Jenis Kelamin"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/more_gray"/>
            </LinearLayout>
        </LinearLayout>
        <!-- hr -->
        <View
            android:id="@+id/hr_4"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray_bg"
            app:layout_constraintTop_toBottomOf="@id/gender"
            />

        <!-- Tanggal Lahir -->
        <LinearLayout
            android:id="@+id/birthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Tanggal Lahir"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/more_gray"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- hr -->
    <View
        android:id="@+id/hr_2"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/gray_bg"
        app:layout_constraintTop_toBottomOf="@id/field2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
