<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ProfileActivity">

    <!-- 1. Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/textUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnNotif"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/notif"
            android:contentDescription="Notification" />

        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/more"
            android:contentDescription="More" />
    </LinearLayout>

    <!-- 2. Divider di bawah Top Bar -->
    <View
        android:id="@+id/dividerUnderTopBar"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 3. Konten Scrollable -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/dividerUnderTopBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profil Info (Foto & Statistik) -->
            <LinearLayout
                android:id="@+id/profileInfoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/profile1"
                    android:contentDescription="Profile" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ariana Grande"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <!-- Posts -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textPostCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="378"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="posts"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Followers -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textFollowers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="375M"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="followers"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Following -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textFollowing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="916"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="following"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Bio & Followed By -->
            <LinearLayout
                android:id="@+id/bionfollowed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Singer | Songwriter | Actress ðŸŽ¤ðŸŒŸ"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textFollowedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Button Section -->
            <LinearLayout
                android:id="@+id/buttonSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/btnFollowing"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:src="@drawable/following"
                    android:contentDescription="Following" />

                <ImageView
                    android:id="@+id/btnMessage"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:src="@drawable/message"
                    android:contentDescription="Message"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/btnAdd"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/add"
                    android:contentDescription="Add" />
            </LinearLayout>

            <!-- Highlights RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerHighlights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingEnd="8dp"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

            <!-- Tab Bar (Grid/Reels/Tagged) -->
            <LinearLayout
                android:id="@+id/topNavigationBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/btn_grid"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="1.1"
                    android:src="@drawable/layout_post"
                    android:contentDescription="Grid"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/btn_reels"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="1.1"
                    android:src="@drawable/reels_ovl"
                    android:contentDescription="Reels"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/btn_tagged"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="1.1"
                    android:src="@drawable/tags"
                    android:contentDescription="Tagged"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <!-- Grid Posts RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 4. Divider di atas BottomNavigationView -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 5. Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/item_home"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/whome"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/item_search"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/search"
            android:contentDescription="Search" />

        <ImageView
            android:id="@+id/item_post"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/post"
            android:contentDescription="Post" />

        <ImageView
            android:id="@+id/item_reels"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/reels"
            android:contentDescription="Reels" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageProfile2"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/profile1"
            android:contentDescription="Profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
