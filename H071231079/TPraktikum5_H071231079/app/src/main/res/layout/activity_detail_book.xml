<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar / Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="16dp"
                android:layout_marginTop="5dp"
                android:layout_height="26dp"
                android:src="@drawable/black_back"
                android:tint="#000000" />

            <ImageView
                android:id="@+id/bookmarkButton"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/white_add_favbook"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Closer to Nowhere"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"/>

        <!-- Cover Image -->

        <!-- Author -->

        <ImageView
            android:id="@+id/imageCover"
            android:layout_width="200dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:clipChildren="true"
            android:background="@drawable/rounded_book"
            android:scaleType="centerCrop"
            android:src="@drawable/book1" />

        <TextView
            android:id="@+id/textAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="by Ellen Hopkins"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Genre + Rating Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Genre Badge -->
            <TextView
                android:id="@+id/textGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Romance"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:paddingVertical="4dp"
                android:paddingHorizontal="24dp"
                android:background="@drawable/bg_genre_selected"/>

            <!-- Spacer -->
            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <!-- Rating Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_yellow"
                android:paddingVertical="4dp"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star"
                    android:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/textRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.2/5.0"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:paddingStart="4dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Add to Favorites Button -->
        <ImageView
            android:id="@+id/button_addfav"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/add_fav_before"
            />

        <!-- Sinopsis Section -->
        <TextView
            android:id="@+id/textSinopsisHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinopsis"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingHorizontal="16dp" />

        <TextView
            android:id="@+id/textSinopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sinopsis here....."
            android:textSize="14sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:layout_marginBottom="4dp"/>

        <!-- Review Populer Section -->
        <TextView
            android:id="@+id/textReviewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Populer"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"
            />

        <!-- Container for 3 review cards -->
        <LinearLayout
            android:id="@+id/reviewContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spacing="12dp"
            android:paddingHorizontal="16dp">
        </LinearLayout>

    </LinearLayout>
</ScrollView>
